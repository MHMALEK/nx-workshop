{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@frontmen/store/feature-game-detail": [
        "libs/store/feature-game-detail/src/index.ts"
      ],
      "@frontmen/store/ui-shared": ["libs/store/ui-shared/src/index.ts"],
      "@frontmen/store/util-formatters": [
        "libs/store/util-formatters/src/index.ts"
      ],
      "@frontmen/store/util-formatters-2": [
        "libs/store/util-formatters-2/src/index.ts"
      ],
      "@frontmen/util-formatters": ["libs/util-formatters/src/index.ts"],
      "@frontmen/util-interface": ["libs/util-interface/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
